#theme-toggle
  height: 1em
  width: 1em
  // display: flex
  align-self: center
  cursor: pointer
  padding: 6px 6px
  border-radius: 6px
  transition: background-color 0.3s
  
  &:hover
    background-color: rgba(128, 128, 128, 0.1)
  
  .toggle
    width: 1.1em
    height: 1.1em
    // margin-right: 8px
    
    &.toggle-right
      display: none
    
    [data-theme="dark"] &
      &.toggle-left
        display: none
      &.toggle-right
        display: block
    
    :root:not([data-theme]) &
      opacity: 0.5
  
  .mode-text
    font-size: 14px
    
    &:after
      content: "Light"
    
    [data-theme="dark"] &:after
      content: "Dark"
    
    :root:not([data-theme]) &:after
      content: "Auto"

  [data-theme="dark"] &,
  // :root:not([data-theme]) & @media (prefers-color-scheme: dark)
    color: #ffffff