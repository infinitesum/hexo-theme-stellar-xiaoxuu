

:root {
  /* Light theme variables */
  --blockquote-bg-light: #F3F3F3;
  --blockquote-border-light: #C9C9C9;
  --blockquote-text-light: #0a111c;
  --blockquote-quote-light: #9E9E9E;

  /* Dark theme variables */
  --blockquote-bg-dark: #2C2C2C;
  --blockquote-border-dark: #686868;
  --blockquote-text-dark: #e1e1e1;
  --blockquote-quote-dark: #9E9E9E;


  /* Font variables */

  --font-family: 'Merriweather', 'LXGW WenKai Screen', Arial, system-ui, sans-serif;
}

@media (prefers-color-scheme: dark) {
  :root {
    --blockquote-bg: var(--blockquote-bg-dark);
    --blockquote-border: var(--blockquote-border-dark);
    --blockquote-text: var(--blockquote-text-dark);
    --blockquote-quote: var(--blockquote-quote-dark);
  }
}

@media (prefers-color-scheme: light) {
  :root {
    --blockquote-bg: var(--blockquote-bg-light);
    --blockquote-border: var(--blockquote-border-light);
    --blockquote-text: var(--blockquote-text-light);
    --blockquote-quote: var(--blockquote-quote-light);
  }
}

blockquote {
  display: block;
  margin: 1rem 0;
  padding: 0.6rem 2rem;
  background: var(--block);
  //border-left: 4px solid var(--blockquote-border);
  border-radius: 8px;
  color: var(--text-p1);
  font-size: 1.1em;
  line-height: 1.6;
  font-style: italic;
  position: relative;
  transition: transform 0.3s ease, box-shadow 0.3s ease;
  font-family: var(--font-family);
}

.md-text blockquote > p:not([class]) {
  text-align: left;
}

blockquote p {
  margin: 0;
}

blockquote::before {
  content: 'â€œ';
  position: absolute;
  top: -2rem;
  left: -1rem;
  font-size: 6rem;
  color: var(--blockquote-quote);
  opacity: 0.25;
  font-family: Georgia, serif;
}


