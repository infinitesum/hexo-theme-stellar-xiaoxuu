<%
function layoutDiv() {
  var el = '';
  el += `<widget class="widget-wrapper${scrollreveal(' ')} webinfo">`;
  if (item.title) {
    el += '<div class="widget-header dis-select">';
    el += '<span class="name">' + item.title + '</span>';
    el += '</div>';
  }
  
  el += '<div class="widget-body fs14">';

  // 运行时间
  // ...existing code...
    if (item.runtime) {
      el += '<div class="webinfo-item">';
      el += `<span class="webinfo-label">${__("meta.webinfo.runtime")}</span>`;
      el += `<span class="webinfo-value">第&thinsp;<time class="ds-webinfo" datetime="${item.runtime}">&thinsp;${__("meta.webinfo.time")}</time></span>`;
      el += '</div>';
    }
  // ...existing code...

  // 文章数
  if (item.article) {
    el += '<div class="webinfo-item">';
    el += `<span class="webinfo-label">${__("meta.webinfo.article")}</span>`;
    el += `<span class="webinfo-value">${site.posts.length}&nbsp;${__("meta.webinfo.post")}</span>`;
    el += '</div>';
  }

  // 上次更新时间
  if (item.sitetime) {
    el += '<div class="webinfo-item" id="post-meta">';
    el += '<span class="webinfo-label">' + __("meta.webinfo.sitetime") + '</span>';
    el += `<span class="webinfo-value"><time class="time" datetime="${new Date()}">${new Date().toLocaleString('zh-CN', { year: 'numeric', month: 'numeric', day: 'numeric' })}</time></span>`;
    el += '</div>';
  }

  // 总字数
  if (item.wordcount) {
    var totalSymbols = totalcount(site);
    el += '<div class="webinfo-item">';
    el += `<span class="webinfo-label">${__("meta.webinfo.wordcount")}</span>`;
    el += `<span class="webinfo-value">${totalSymbols}&thinsp;${__("meta.wordcount.words")}</span>`;
    el += '</div>';
  }



  // 版本信息（可选）
  if (item.version && config.swpp.enable) {
    el += '<div class="webinfo-item">';
    el += `<span class="webinfo-label">${__("meta.webinfo.version")}</span>`;
    el += `<span class="webinfo-value ds-webinfo" version></span>`;
    el += '</div>';
  }

  el += '</div>';
  el += '</widget>';
  return el;
}
%>
<%- layoutDiv() %>
